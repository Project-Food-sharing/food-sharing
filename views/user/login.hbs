<div class="index-wrapper">
  <div class="welcome-message">
    <h3 class="h3-login"">Log in</h3>
    <h1 style=" margin-top: 0;">Welcome to</br>FoodSharingApp</h1>
      <span style="font-size: 3em;">🍎 🍌 🍔 🍳 🧃</span>

  </div>

  <div class="signup-box">
    <form action="/login" method="POST" class="form-login">

      <p>
        <input type="text" name="username" id="username" placeholder="Username"></p>

      <p>
        <input type="password" name="password" placeholder="Password"></p>

      <p><button type="submit" class="secondary-btn">Log In</button></p>
    </form>

    {{#if message}}
    <p style='color: red'>{{message}}</p>
    {{/if}}
  </div>
</div>