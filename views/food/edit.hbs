<h2>Edit Food entry</h2>

{{#with foodToEdit}}

<form action="/food/{{_id}}/edit" method="POST">

  <p><label for="title">Title:</label>
    <input type="text" name="title" id="title" value="{{title}}"></p>

  <label for="zipcode">Zipcode</label>
  <input type="text" name="zipcode" id="zipcode" value={{zipcode}}>

  <label for="houseNumber">HouseNumber</label>
  <input type="text" name="houseNumber" id="houseNumber" value={{houseNumber}}>

  <label for="street">Street</label>
  <input type="text" name="street" id="street" value={{street}}>

  <p><label for="description">Description:</label>
    <textarea name="description" id="description">{{description}}</textarea></p>

  {{#each categories}}
  <p>
    <input type=" checkbox" name="categories" id="categories" value={{this}}>
    <label for="categories">{{this}}</label></p>
  {{/each}}

  {{!-- <p><label for="categories">Upload photo:</label>
    <input type="file" name="photo" id="photo"></p> --}}

  <hr>
  <p><button type="submit">Update your entry</button></p>

</form>

{{/with}}