<h2>Add Food</h2>

<form action="/dashboard" method="POST">

  <p><label for="title">Title:</label>
    <input type="text" name="title" id="title"></p>

  <p><label for="address">Address:</label>
    <input type="text" name="address" id="address"></p>

  <p><label for="description">Description:</label>
    <input type="text" name="description" id="description"></p>

  {{#each categories}}
  <p>
    <input type="checkbox" name="categories" id="categories" value={{this}}>
    <label for="categories">{{this}}</label></p>
  {{/each}}

  {{!-- <p><label for="categories">Upload photo:</label>
    <input type="file" name="photo" id="photo"></p> --}}

  <hr>
  <p><button type="submit">Share now!</button></p>


</form>